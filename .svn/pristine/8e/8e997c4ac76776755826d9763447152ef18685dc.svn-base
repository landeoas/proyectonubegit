@(Curso: Curso)

@import helper._

@implicitFieldConstructor=@{ FieldConstructor(views.html.include.constructor_field_input.render) }

@main("Mostrar Curso") {

<h2> Datos del Curso  </h2>

<table class="table table-bordered">
	<tr >
		<th>Id</th>
		<th>Nombre</th>
		<th>Ciclo</th>
		<th>Creditos</th>
		<th>Profesor</th>
		<th>Creado</th>
		<th>Modificado</th>
		<th>Accion</th>
	</tr>
	 <tr class='webgrid-row-style'>
		<tr >
		<td>@Curso.id</td>
		<td>@Curso.name</td>
		<td>@Curso.ciclo</td>
		<td>@Curso.creditos</td>
		<td>@Curso.profesor.nombres @Curso.profesor.apellidos</td>
		<td>@Curso.created.format("dd/MM/yyyy")</td>
		<td>@Curso.updated.format("dd/MM/yyyy")</td>
		<td><a href=""> <input type="button" value="Unirse"> </a></td>	
	</tr>

</table>
	<a href="@routes.AlumnoController.buscar_curso()"> <input type="button" value="Regresar"> </a>
}