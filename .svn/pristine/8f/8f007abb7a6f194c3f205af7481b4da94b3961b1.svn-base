@(lista: List[Curso])

@import helper._

@implicitFieldConstructor=@{ FieldConstructor(views.html.include.constructor_field_input.render) }

@main("Mostrar Cursos") {

	<h2> Datos del Curso  </h2>

	<table class="table table-bordered">
		<tr>
			<th>Asignatura</th>
			<th>Ciclo</th>
			<th>Creditos</th>
			<th>Grupo</th>
			@if(session.get("user")== "Admin"){
				<td>Profesor</td>
			}else{
				<th>Acciones</th>
			}
		</tr>

		@for(curso <- lista) {
		<tr>
			<td>@curso.name</td>
			<td>@curso.ciclo</td>
			<td>@curso.creditos</td>
			<td>@curso.ciclo</td>
			@if(session.get("user")== "Admin"){
				<td>@curso.profesor</td>
			}else{
				<td><a href="@routes.ProfesorController.gestion_curso(curso.id)"><input type="button" value="Ingresar"></a>
			}
			
		</tr>
		}
	</table>
	<!--<a href="@routes.AlumnoController.buscar()"> <input type="button" value="Regresar"> </a>-->
}